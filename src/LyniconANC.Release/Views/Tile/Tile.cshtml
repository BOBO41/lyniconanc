@model TileContent
@using LyniconANC.Release.Models
@using Lynicon.Utility
<div class="spacer" style="height:100px;">

</div>

<div>
    <h1>@Model.Title</h1>
    <img class="tile-image" src="@Model.Image.Url" alt="@Model.Image.Alt" />
    @Model.Description
    <div>
        Width: @Model.Widthmm  mm
    </div>
    <div>
        Height: @Model.Heightmm  mm
    </div>
    <div>
        @{ var material = Model.Material.Summary(); }
        <a href="@material.Url">Material: @material.Title</a>
    </div>
    @if (Model.AvailableColours != null)
    {
    <div>
        <h3>Available Colours</h3>
        <ul>
        @foreach (var colr in Model.AvailableColours)
        {
           <li>@colr.DisplayName()</li> 
        }
        </ul>
    </div>
    }
</div>
    
